<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/galeri_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <ScrollView
        android:id="@+id/galeri_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:id="@+id/galeri_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/file_1"
                android:layout_width="294dp"
                android:layout_height="352dp"
                android:contentDescription="@string/gambar"
                app:srcCompat="@drawable/a"
                tools:layout_editor_absoluteX="58dp"
                tools:layout_editor_absoluteY="67dp" />

            <TextView
                android:id="@+id/namaFile_1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Thomas, Amira.jpg"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/file_2"
                android:layout_width="343dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/gambar"
                app:srcCompat="@drawable/d" />

            <TextView
                android:id="@+id/namaFile_2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Morgan, Amira, Candy.jpg"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/file_3"
                android:layout_width="318dp"
                android:layout_height="322dp"
                android:contentDescription="@string/gambar"
                app:srcCompat="@drawable/b"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/namaFile_3"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Thomas, Yohannes, Amira.jpg"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/file_4"
                android:layout_width="346dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/gambar"
                app:srcCompat="@drawable/e" />

            <TextView
                android:id="@+id/namaFile_4"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Morgan, Candy, Amira.jpg"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/file_5"
                android:layout_width="351dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/gambar"
                app:srcCompat="@drawable/f" />

            <TextView
                android:id="@+id/namaFile_5"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="All squad.jpg"
                tools:ignore="HardcodedText" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>